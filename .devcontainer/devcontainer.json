{
  "name": "C++ Dev Container",
  "image": "mcr.microsoft.com/devcontainers/cpp:ubuntu-24.04",
  "workspaceFolder": "/workspace/${localWorkspaceFolderBasename}",
  "workspaceMount": "source=${localWorkspaceFolder},target=/workspace/${localWorkspaceFolderBasename},type=bind,consistency=cached",
  "mounts": [
    "source=${localWorkspaceFolder}/.vcpkg-cache,target=/home/vscode/.cache/vcpkg,type=bind,consistency=cached,Z",
    "source=${localEnv:HOME}/.claude,target=/home/vscode/.claude,type=bind,Z",
    "source=${localEnv:HOME}/.claude.json,target=/home/vscode/.claude.json,type=bind",
    "source=${localEnv:HOME}/.codex,target=/home/vscode/.codex,type=bind"
  ],
  "customizations": {
    "jetbrains": {
      "settings": {
        "com.intellij:app:DateTimeFormatter.overrideSystemDateFormat": true,
        "com.intellij:app:HttpConfigurable.use_proxy_pac": true,
        "com.intellij:app:Vcs-Log-App-Settings.show_changes_from_parents": true,
        "com.intellij:app:Vcs-Log-App-Settings.show_tag_names": true
      },
      "plugins": [
        "org.jetbrains.junie",
        "com.anthropic.code.plugin",
        "com.intellij.ml.llm"
      ]
    },
    "clion": {
      "container": {
        "remoteUser": "vscode"
      }
    }
  },
  "remoteEnv": {
    "VCPKG_BINARY_CACHE": "/home/vscode/.cache/vcpkg"
  },
  "postCreateCommand": "curl -fsSL https://claude.ai/install.sh | bash && vcpkg install",
  "features": {
    "ghcr.io/devcontainers/features/node:1": {
      "version": "lts"
    },
    "ghcr.io/devcontainers/features/common-utils:1": {
      "installZsh": true,
      "configureZshAsDefaultShell": true
    }
  },
  "remoteUser": "vscode"
}
